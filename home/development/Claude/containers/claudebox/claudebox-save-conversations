#!/bin/bash
set -euo pipefail

# Script to save conversations from claudebox container to host
# Usage: claudebox-save-conversations [container-name]

echo "üîç Looking for claudebox containers..."

# If container name provided, use it. Otherwise find the most recent one
if [[ $# -gt 0 ]]; then
    CONTAINER_NAME="$1"
else
    # Find most recent claude-code-auth container (running or stopped)
    CONTAINER_NAME=$(docker ps -a --filter "name=claude-code-auth" --format "{{.Names}}" | head -1)

    if [[ -z "$CONTAINER_NAME" ]]; then
        echo "‚ùå No claudebox containers found"
        echo "   Run this while claudebox is running, or specify container name"
        exit 1
    fi

    echo "üì¶ Found container: $CONTAINER_NAME"
fi

# Check if container exists
if ! docker ps -a --format "{{.Names}}" | grep -q "^${CONTAINER_NAME}$"; then
    echo "‚ùå Container not found: $CONTAINER_NAME"
    exit 1
fi

# Create host projects directory if it doesn't exist
mkdir -p "$HOME/.claude/projects"

# Check if container has any conversations
if ! docker exec "$CONTAINER_NAME" test -d /home/node/.claude/projects 2>/dev/null; then
    echo "üìÅ No conversations found in container"
    exit 0
fi

echo "üíæ Copying conversations from container to host..."
echo "   Container: /home/node/.claude/projects"
echo "   Host:      $HOME/.claude/projects"
echo ""

# Copy each project directory, skipping if it already exists on host
COPIED=0
SKIPPED=0

for project_dir in $(docker exec "$CONTAINER_NAME" find /home/node/.claude/projects -mindepth 1 -maxdepth 1 -type d 2>/dev/null || true); do
    project_name=$(basename "$project_dir")

    if [[ -d "$HOME/.claude/projects/$project_name" ]]; then
        echo "‚è≠Ô∏è  Skipping $project_name (already exists on host)"
        SKIPPED=$((SKIPPED + 1))
    else
        echo "üì• Copying $project_name"
        docker cp "$CONTAINER_NAME:/home/node/.claude/projects/$project_name" "$HOME/.claude/projects/"
        COPIED=$((COPIED + 1))
    fi
done

echo ""
echo "‚úÖ Done!"
echo "   Copied: $COPIED conversations"
echo "   Skipped: $SKIPPED conversations (already existed)"

if [[ $COPIED -gt 0 ]]; then
    echo ""
    echo "üí° New conversations saved to: $HOME/.claude/projects"
fi
